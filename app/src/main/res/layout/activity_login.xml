<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond1"
    tools:context="com.example.edwin.appmyevents.interfaz.LoginActivity" >


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:theme="@style/AppTheme"
        app:popupTheme="@style/AppTheme.PopupOverlay" />


    <Button
        android:id="@+id/btnIngresar"
        style="?android:attr/buttonBarStyle"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/btnRegistroPrincipal"
        android:layout_below="@+id/opcion_mostrar"
        android:layout_marginTop="-1dp"
        android:background="@drawable/buttonlogin"
        android:text="Log in"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btnRegistroPrincipal"
        style="?android:attr/buttonBarStyle"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_below="@+id/btnIngresar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/buttonregister"
        android:gravity="center_vertical|center_horizontal"
        android:text="Create an Account"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="normal" />

    <CheckBox
        android:id="@+id/opcion_mostrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPasswordLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:onClick="mostrarContraseña"
        android:text="¿View password?"
        android:textSize="10dp"
        android:textStyle="normal"/>

    <EditText
        android:id="@+id/txtPasswordLogin"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/txtCorreoLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="PASSWORD"
        android:background="@drawable/txtemail"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/icon_passwd"
        android:singleLine="true"
        android:textSize="12dp"
        android:textStyle="normal"
        tools:ignore="UnknownId" />

    <EditText
        android:id="@+id/txtCorreoLogin"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="219dp"
        android:background="@drawable/txtemail"
        android:ems="10"
        android:hint="EMAIL OR USERNAME"
        android:drawableLeft="@drawable/icon_mail2"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textSize="12dp"
        android:textStyle="normal"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imageView7"
        android:layout_marginEnd="17dp"
        android:layout_toStartOf="@+id/imageView7"
        app:srcCompat="@drawable/google" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="245dp"
        android:layout_height="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/welcome" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="500dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="75dp"
        app:srcCompat="@drawable/usr1" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/btnRegistroPrincipal"
        android:layout_alignTop="@+id/imageView7"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/github" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="487dp"
        android:layout_alignTop="@+id/login_button"
        android:layout_toEndOf="@+id/login_button"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/facebook" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="10dp"
        android:layout_below="@+id/btnRegistroPrincipal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="@drawable/msm" />

</RelativeLayout>
