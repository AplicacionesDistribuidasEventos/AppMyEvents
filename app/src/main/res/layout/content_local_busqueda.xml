<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:id="@+id/content_local_busqueda"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.edwin.appmyevents.interfaz.ListadoEventosActivity"
    tools:showIn="@layout/activity_listar_locales_busqueda"
    >

    <TextView
        android:id="@+id/scooby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Buscar por Fecha"
        android:textSize="30sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/scooby"
        android:text="dame click"
        android:textSize="20sp" />

    <Button
        android:id="@+id/listar"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tvFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Buscar"
        android:text="Buscar"
        tools:ignore="OnClick" />



    <ListView
        android:layout_width="match_parent"
        android:layout_below="@+id/listar"
        android:layout_height="match_parent"
        android:id="@+id/listViewLocalBusqueda"
        />

</RelativeLayout>